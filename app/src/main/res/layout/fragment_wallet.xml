<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_16sdp"
    android:paddingBottom="@dimen/_16sdp"
    android:paddingTop="@dimen/_4sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_178sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_card" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_25sdp"
            android:paddingTop="@dimen/_22sdp"
            android:paddingEnd="@dimen/_25sdp"
            android:paddingBottom="@dimen/_22sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_logo_card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_medium"
                    android:text="@string/balance"
                    android:textAllCaps="true"
                    android:textColor="@color/color_B2FFFFFF"
                    android:textSize="@dimen/_8ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvBalanceWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_medium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        tools:text="3,002.123" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/text_regular"
                        android:text="@string/kai_unit"
                        android:textColor="@color/color_B2FFFFFF"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAddressWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:ellipsize="middle"
                    android:fontFamily="@font/text_regular"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    tools:text="0x9e991abd0sadsadasdasda0e7927dd4bdsa3d58" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:text="@string/holder"
                            android:textAllCaps="true"
                            android:textColor="@color/color_B2FFFFFF"
                            android:textSize="@dimen/_8ssp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvHolderWallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:text="AN NGUYEN" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:text="@string/member_since"
                            android:textAllCaps="true"
                            android:textColor="@color/color_B2FFFFFF"
                            android:textSize="@dimen/_8ssp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvMemberSinceWallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:text="07/2020" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlNoDataTransaction"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nodata_transaction"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_medium"
                    android:textColor="@color/color_DE000000"
                    android:textSize="@dimen/_16ssp"
                    android:text="@string/title_no_transaction" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_medium"
                    android:textColor="@color/color_8A000000"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_11ssp"
                    android:text="@string/content_no_transaction" />
            </LinearLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_14sdp"
                app:backgroundTint="@color/color_67798E"
                app:elevation="0dp"
                app:maxImageSize="@dimen/_24sdp"
                app:srcCompat="@drawable/ic_plus_fab_wallet"
                app:tint="@color/white" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llDataTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/text_regular"
                android:textColor="@color/color_DE000000"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_16sdp"
                android:text="@string/recent_transactions" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactionWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:overScrollMode="never"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>